@model PersonalWebsite.Models.Article

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Article</legend>

        @Html.HiddenFor(model => model.ArticleID)

        <div class="editor-label">
            @Html.LabelFor(model => model.ArticleType)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.ArticleType)
            @Html.ValidationMessageFor(model => model.ArticleType)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.ArticleDate)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.ArticleDate)
            @Html.ValidationMessageFor(model => model.ArticleDate)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.ArticleContent)
        </div>
        <div class="editor-field">
            @Html.TextAreaFor(model => model.ArticleContent)
            @Html.ValidationMessageFor(model => model.ArticleContent)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Markdown)
        </div>
        <div class="editor-field">
            @Html.TextAreaFor(model => model.Markdown)
            @Html.ValidationMessageFor(model => model.Markdown)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

<script>
    var textBoxes = document.getElementsByClassName("text-box");
    for (var i = 0; i < textBoxes.length; i++) {
        textBoxes[i].style.width = "100%";
        textBoxes[i].style.height = "25px";
        textBoxes[i].className += " layui-input";
    }

    var textAreas = document.getElementsByTagName("textarea");
    for (var i = 0; i < textAreas.length; i++) {
        textAreas[i].className += " layui-textarea";
        textAreas[i].rows = 8;
    }
</script>
