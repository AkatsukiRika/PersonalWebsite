@model PersonalWebsite.Models.Contact

<body class="c1">

    <div id="container">

        <div id="contents">

            <div id="main">

                <section>

                    <p class="check">This page is used for contacting the owner. The reply will be in the form of e-mail.</p>

                    <h2>CONTACT<span>Contact the owner</span></h2>

                    <p>Fill in the following blanks to simply contact the owner! Here's something to pay attention to...</p>
                    <p>
                        <strong class="color1">■Please use an existing e-mail address</strong><br>
                        Unusable e-mail addresses may be hard to recognize and also cannot be replied.
                    </p>
                    <p>
                        <strong class="color1">■The details must be less than 2048 characters</strong><br>
                        Due to the limit of database, you can only write less than 2048 characters.
                    </p>

                    @using (Html.BeginForm())
                    {

                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true)

                        <table class="ta1">
                            <tr>
                                <th>Name※</th>
                                <td>@Html.TextBoxFor(model => model.ContactName, new { @style="width:90%" })</td>
                                <!--<td><input type="text" name="Name" size="30" class="ws"></td>-->
                            </tr>
                            <tr>
                                <th>E-Mail※</th>
                                <td>@Html.TextBoxFor(model => model.EMail, new { @style="width:90%" })</td>
                                <!--<td><input type="text" name="Email" size="30" class="ws"></td>-->
                            </tr>
                            <tr>
                                <th>Details※</th>
                                <td>@Html.TextAreaFor(model => model.Details, 10, 100, new { @style="width:100%" })</td>
                                <!--<td><textarea name="Details" cols="30" rows="10" class="wl"></textarea></td>-->
                            </tr>
                        </table>

                        <p class="c">
                            <input type="submit" value="Confirm" class="btn">
                        </p>

                    }

                </section>

            </div>
            <!--/#main-->

            <div id="sub">

            </div>
            <!--/#sub-->

        </div>
        <!--/#contents-->

        <footer>
        </footer>

    </div>
    <!--/#container-->

    <!--ページの上部に戻る「↑」ボタン-->
    <p class="nav-fix-pos-pagetop"><a href="#">↑</a></p>

    <!--メニュー開閉ボタン-->
    <div id="menubar_hdr" class="close"></div>

    <!--メニューの開閉処理条件設定　900px以下-->
    <script>
        if (OCwindowWidth() <= 900) {
            open_close("menubar_hdr", "menubar-s");
        }
    </script>

    <!--パララックス用ファイル読み込み-->
    <script src="js/jquery.inview.js"></script>
    <script src="js/jquery.inview_set.js"></script>

</body>
</html>
